{
  "name": "d365-automation-extension",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild src/injected/index.js --bundle --outfile=injected.js --platform=browser --format=iife --target=es2020 --sourcemap=inline --tree-shaking=false",
    "build:watch": "esbuild src/injected/index.js --bundle --outfile=injected.js --platform=browser --format=iife --target=es2020 --sourcemap=inline --tree-shaking=false --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.20.2",
    "jsdom": "^26.1.0",
    "vitest": "^3.2.4"
  }
}
